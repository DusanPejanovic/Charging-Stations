<Window x:Class="Admin.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin"
        mc:Ignorable="d"
        Title="Reports" Height="450" Width="800">
    <Grid>

        <Border CornerRadius="10" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="AntiqueWhite" Offset="0.0"/>
                    <GradientStop Color="MintCream" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>


        <Button  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" x:Name="Continuee" Content="Nastavak" HorizontalAlignment="Left" Margin="600,103,0,0" VerticalAlignment="Top" Width="100" Click="Continue" Height="53">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" x:Name="pocetakTextBox" HorizontalAlignment="Left" Margin="185,93,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="20" Width="215">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" x:Name="krajTextBox" HorizontalAlignment="Left" Margin="185,128,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="25" Width="215">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" Content="Od kada zelite izvestaj:" HorizontalAlignment="Left" Margin="50,87.5,0,0" VerticalAlignment="Top"/>
        <Label  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" Content="Do kada zelite izvestaj:" HorizontalAlignment="Left" Margin="50,127.5,0,0" VerticalAlignment="Top"/>
        <Label  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" Content="Najposecenija stanica:" HorizontalAlignment="Left" Margin="424,93,0,0" VerticalAlignment="Top"/>
        <Label  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" Content="Ukupan pazar" HorizontalAlignment="Left" Margin="424,127,0,0" VerticalAlignment="Top"/>
        <DataGrid  Background="Transparent" FontFamily="Helvetica" FontWeight="Light" Opacity="0.7" Name="dataGrid1" ItemsSource="{Binding}" SelectionMode="Single" AutoGenerateColumns="False" Margin="20,191,20,10" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv pocene stanice" Binding="{Binding naziv_pocetne}" Width="*" />
                <DataGridTextColumn Header="Naziv krajnje stanice" Binding="{Binding naziv_krajnje}" Width="*" />
                <DataGridTextColumn Header="Naziv kategorije vozila" Binding="{Binding naziv_kategorije}" Width="*" />
                <DataGridTextColumn Header="Cena" Binding="{Binding cena}" Width="*" />
                <DataGridTextColumn Header="Datum transakcije" Binding="{Binding Datum_Transakcije}" Width="*" />
                <DataGridTextColumn Header="Regisracione tablice" Binding="{Binding registraciona_tablica}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
